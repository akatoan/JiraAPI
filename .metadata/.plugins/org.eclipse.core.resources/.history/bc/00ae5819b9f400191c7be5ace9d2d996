package com.example.api;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.example.domain.IssueInfo;
import com.example.service.CreateIssueService;

@RestController
@RequestMapping(value = "/api/create/issue/{projectKey}/issue/{linkedIssueId}")
public class CreateIssueController {
	
	@Autowired
	CreateIssueService createIssueService;
        
    @GetMapping
    public String getItem() {
    	String msg = createIssueService.postItem();
    	return msg;
    }
    
    @PostMapping
    public String postItem(
    		@PathVariable("projectKey") String projectKey,
    		@PathVariable("linkedIssueId") String linkedIssueId
    		)
    {
    	String results = createIssueService.createIssue(projectKey, linkedIssueId);
    	return results;
    }
    
}
