package com.example.service;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.example.domain.IssueInfo;
import com.example.repository.IssueInfoRepository;
import com.example.repository.JiraOperationRepository;

@Service
public class CreateIssueService {
	
	@Autowired
	IssueInfoRepository issueInfoRepository;
	
	@Autowired
	JiraOperationRepository jiraOperationRepository;
	
	public IssueInfo createIssueByGet(
			String projectKey,
			String issueId
			)
	{	
		
		// get issue information
		IssueInfo issueInfo = issueInfoRepository.getIssueInfo(projectKey, issueId);
		
		// create post header
		jiraOperationRepository.callWebAPI(issueInfo);
		
		// create post body
		
		return issueInfo;
	}
	
	
	public String postItem() {
		return "POSTメソッド成功!";
	}
	
}
