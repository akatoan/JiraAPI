package com.example.api;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.example.domain.IssueInfo;
import com.example.service.CreateIssueService;

@RestController
@RequestMapping(value = "/api/create/issue/{linkedIssueKey}/{sprintId}")
public class CreateIssueController {
	
	@Autowired
	CreateIssueService createIssueService;
        
    @GetMapping
    public String getItem() {
    	String msg = createIssueService.getItem();
    	return msg;
    }
    
    @PostMapping
    public String postItem(
    		@PathVariable("linkedIssueKey") String linkedIssueKey,
    		@PathVariable("sprintId") String sprintId
    		)
    {
    	String results = createIssueService.createIssue(linkedIssueKey);
    	
    	System.out.println( "Created issue: " + results);
    	
    	return results;
    }
    
}
